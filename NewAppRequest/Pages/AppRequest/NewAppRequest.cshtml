@page
@model NewAppRequest.Pages.AppRequest.AppRequestModel
@{
}


<div class="container" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.applicationName"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.applicationName" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.applicationName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.applicationURL"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.applicationURL" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.applicationURL"></span>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.usercomments"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.usercomments" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.usercomments"></span>
		</div>

		
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.firstName"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.firstName" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.firstName"></span>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.lastName"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.lastName" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.lastName"></span>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.phoneNumber"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.phoneNumber" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.phoneNumber"></span>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="appRequest.email"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="appRequest.email" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="appRequest.email"></span>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Submit" />
			</div>
			<div class="col-5">
				<input type="button" class="btn btn-primary" value="Reset" />
			</div>
		</div>
		
	</form>

</div>
